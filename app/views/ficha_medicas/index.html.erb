

<!-- Alerta para un usuario vip -->
<% if current_user.try(:vip?) %> 
      <div class="alert alert-danger" role="alert">
      <h2>No tiene permiso para utilizar esta sección consulte con el administrador</h2>
<% end %>
<!-- fin de alerta -->

<!-- Si es admin y user se muestra la pagina -->
<% if user_signed_in? %>
  <% if current_user.try(:user?) || current_user.try(:admin?)  %> 
<!-- finaliza al pie de esta lamina con dos end  -->
      
<div class="row">

  <div class="col-md-4">
      <h3>Fichas Médica</h3>
      <hr></hr>  
  </div>
  <div class="col-md-8">
      <%= render 'buscar' %>
  </div>

</div>

<div class="col-sm-12">
    <div><%= link_to ' Crear Nueva Ficha', new_ficha_medica_path, :class=>"btn btn-nuevo" %></div>
<br>
<table class="table">
  <thead >
    <tr> 
      <th>FECHA/CREACIÓN</th>
      <th>PACIENTE</th>
      <th>NOMBRE COMÚN </th>
      <th>ESTADO DE SALUD</th>
      <th>MOTIVO DE CONSULTA</th>
      <th>PREDIAGNÓSTICO</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ficha_medicas.each do |ficha_medica| %> 
      <tr>
         
        <td><%= l(ficha_medica.created_at, :format => :long) %></td>
        <td><%= ficha_medica.animal.identificador %></td>
        <td><%= ficha_medica.animal.nombre_comun %></td>
        <td><%= ficha_medica.estado_medico.nombre %></td>
        <td><%= ficha_medica.enfermedad %></td>
        <td><%= ficha_medica.dolencia %></td>
        <td><%= link_to 'Mostrar', ficha_medica, :class=>"btn btn-mostrar"  %></td>
        <td><%= link_to 'Modificar', edit_ficha_medica_path(ficha_medica), :class=>"btn btn-modificar"  %></td>
        <%if current_user.admin?%> 
           <td><%= link_to 'Destruir', ficha_medica, method: :delete, data: { confirm: 'Estas seguro de querer eliminar?'}, :class=>"btn btn-destruir" %></td>
        <%end%> 
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= will_paginate @ficha_medica, :previous_label => 'Menos', :next_label => 'Más', renderer: BootstrapPagination::Rails %>
<br>

 <% end %>
<% end %>