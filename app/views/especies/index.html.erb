<p id="notice"><%= notice %></p>

<h1>Especies</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @especies.each do |especie| %>
      <tr>
        <td><%= especie.nombre %></td>
        <td><%= link_to 'Show', especie %></td>
        <td><%= link_to 'Edit', edit_especie_path(especie) %></td>
        <td><%= link_to 'Destroy', especie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

