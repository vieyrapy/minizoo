
 <div class="row">
  
  <div class="col-md-4">
      <h3>Lista de especies</h3>
      <hr></hr>  
  </div>
</div>

  <div class="col-sm-9">
    <div><%= link_to 'Nueva Especie', new_especie_path, :class=>"btn btn-nuevo" %>
    </div>
      <br>
      <table class="table table-condensed">
          <thead>
            <tr>
              <th>Nombre</th>
              <th colspan="3"></th>
            </tr>
          </thead>

        <tbody>
          <% @especies.each do |especie| %>
            <tr>
              <td><%= especie.nombre %></td>
              <td><%= link_to 'Modificar', edit_especie_path(especie), :class=>"btn btn-modificar"  %></td>
              <td><%= link_to 'Destruir', especie, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-destruir"%></td>
            </tr>
          <% end %>
        </tbody>
    </table>

<br>


